<?xml version="1.0" encoding="UTF-8" ?>
<!-- Ce type de fichier sert à lister les langues et les dialectes supportées par un projet. -->
<languages>
	<!-- Le code de langue sont indiqué en format ISO 639-3 -->
	<lang name="fra"/>
	<!-- La déclaration précédente est équivalente à celle qui suit, plus explicite : -->
	<!-- <lang name="fra" standard="include"/> -->

	<!-- L'attribut 'exclude' indique que la langue en question n'est pas géré par l'application.
	     En revanche les dialectes déclarés le sont. -->
	<lang name="jap" standard="exclude">
		<!-- Les dialectes sont exposés sous la forme LANG.DIALECT, ici jap.shimane -->
		<dialect name="shimane"/>
	</lang>
</languages>